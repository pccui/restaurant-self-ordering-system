{
  "name": "restaurant-self-ordering-system",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:frontend": "turbo dev --filter=frontend",
    "dev:backend": "turbo dev --filter=backend",
    "build": "turbo build",
    "build:shared": "turbo build --filter=@restaurant/shared",
    "build:frontend": "turbo build --filter=frontend",
    "build:backend": "turbo build --filter=backend",
    "start": "turbo start",
    "start:frontend": "turbo start --filter=frontend",
    "start:backend": "turbo start --filter=backend",
    "typecheck": "turbo typecheck",
    "typecheck:frontend": "turbo typecheck --filter=frontend",
    "typecheck:backend": "turbo typecheck --filter=backend",
    "lint": "turbo lint",
    "format": "turbo format",
    "clean": "turbo clean && rm -rf node_modules .turbo"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "turbo": "^2.6.2"
  },
  "engines": {
    "node": ">=22",
    "pnpm": "^10.0.0"
  },
  "packageManager": "pnpm@10.14.0"
}