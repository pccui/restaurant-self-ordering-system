{
  "name": "restaurant-self-ordering-system",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend start:dev",
    "dev": "pnpm -r dev",
    "build:shared": "pnpm --filter @restaurant/shared build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "build": "pnpm build:shared && pnpm -r --filter '!@restaurant/shared' --parallel build",
    "start": "pnpm -r start",
    "start:frontend": "pnpm --filter frontend start",
    "typecheck": "pnpm -r typecheck",
    "typecheck:frontend": "pnpm --filter frontend typecheck",
    "typecheck:backend": "pnpm --filter backend typecheck",
    "format": "pnpm --filter frontend format",
    "lint": "pnpm --filter frontend lint"
  },
  "devDependencies": {
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": "^22.0.0",
    "pnpm": "^10.0.0"
  },
  "packageManager": "pnpm@10.14.0"
}