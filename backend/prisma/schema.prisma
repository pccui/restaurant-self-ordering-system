generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

// User roles for dashboard access control
enum Role {
  ADMIN
  WAITER
  KITCHEN
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String
  role         Role     @default(WAITER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model MenuItem {
  id           String @id
  category     String
  priceCents   Int
  tastes       Json?
  ingredients  Json?
  thumbnailUrl String?
  imageUrl     String?
  videoUrl     String?
  featured     Boolean @default(false)
  translations Json
}

model Order {
  id        String   @id @default(cuid())
  tableId   String
  items     Json
  total     Int      @default(0)
  status    String   @default("pending") // pending, confirmed, preparing, completed, paid
  lockedAt  DateTime?
  metadata  Json?
  deletedAt DateTime? // Soft delete marker
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id         String   @id @default(cuid())
  action     String   // CREATE, UPDATE, DELETE, STATUS_CHANGE, PAY
  entityType String   // Order, User, MenuItem
  entityId   String
  userId     String?
  userEmail  String?
  changes    Json?    // { before, after }
  metadata   Json?    // IP, user agent, etc.
  createdAt  DateTime @default(now())

  @@index([entityType, entityId])
  @@index([userId])
  @@index([createdAt])
}
