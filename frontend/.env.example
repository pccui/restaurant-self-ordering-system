# Backend API URL
# For local development: http://localhost:3001
# For production: https://your-backend.onrender.com
NEXT_PUBLIC_API_URL=http://localhost:3001

# Enable local mode feature (offline-first ordering)
# When false, mode toggle is hidden and /local/ routes redirect to server routes
NEXT_PUBLIC_ENABLE_LOCAL_MODE=false

# Demo mode: shows a banner with admin credentials and usage instructions
# Set to 'true' for public demo deployments
NEXT_PUBLIC_DEMO_MODE=false
